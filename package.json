{
  "name": "ibm-salesforce-context-telemetry",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "prestart": "lsof -ti :3100 | xargs kill -9 2>/dev/null || true",
    "start": "npm run build:css && node src/index.js",
    "dev": "concurrently \"npm run dev:css\" \"nodemon src/index.js\"",
    "dev:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build": "npm run build:css:prod",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css",
    "build:css:prod": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "postinstall": "npm run build:css:prod || true",
    "start:electron": "npm run build:css:prod && electron src/electron.js",
    "dist:mac": "npm run build:css:prod && electron-builder --mac dmg zip --universal",
    "postdist:mac": "npm rebuild better-sqlite3",
    "generate-test-data": "node src/scripts/generate-test-data.js",
    "generate-password-hash": "node src/scripts/generate-password-hash.js",
    "create-user": "node src/scripts/create-user.js",
    "update-user-role": "node src/scripts/update-user-role.js",
    "update-admin-role": "node src/scripts/update-admin-role.js",
    "export-database": "node src/scripts/export-database.js",
    "import-database": "node src/scripts/import-database.js",
    "lint": "npm run lint:eslint && npm run lint:ts",
    "lint:eslint": "eslint .",
    "lint:ts": "tsc --noEmit --pretty false --project tsconfig.lint.json",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.6",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.0",
    "express-session": "^1.18.2",
    "pg": "^8.11.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^4.1.17",
    "uuid": "^13.0.0",
    "express-rate-limit": "^8.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "concurrently": "^9.1.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.0",
    "purgecss": "^7.0.2",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.ibm.context.telemetry.viewer",
    "productName": "IBM Salesforce Context Telemetry",
    "directories": {
      "output": "dist"
    },
    "extraMetadata": {
      "main": "src/electron.js"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "src/electron.js",
      "src/**/*",
      "public/**/*",
      "package.json",
      ".env"
    ],
    "mac": {
      "icon": "public/resources/favicon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    }
  }
}
