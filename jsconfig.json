{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "dom"
    ],
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public/vendor",
    "**/*.min.js"
  ],
  "include": [
    "src/**/*",
    "public/**/*.js"
  ]
}


