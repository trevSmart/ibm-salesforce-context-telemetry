{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ],
    "checkJs": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public/vendor",
    "**/*.min.js",
    "src/scripts/migrate-add-company-name.js",
    "src/scripts/migrate-add-error-message.js",
    "src/scripts/migrate-org-team-mappings.js",
    "src/scripts/regularize-telemetry-data.js",
    "src/scripts/update-company-names.js"
  ],
  "include": [
    "src/**/*",
    "public/**/*.js"
  ]
}


